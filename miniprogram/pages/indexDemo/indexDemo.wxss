.indeDemo {
  text-align: center;
}

.cal {
  border: 1rpx solid #333;
  display: inline-block;
  /* margin: 0 auto; */
}

.cal-header {
  display: flex;
  flex-direction: row;
}

.cal-header view {
  border-left: 1rpx solid #333;
  text-align: center;
  display: block;
  width: 80rpx;
}

.cal-header view:first-child {
  border: 0rpx;
}


.calContain {
  display: flex;
  flex-direction: row;
}

.cal-contain-detail {
  width: 80rpx;
  border-left: 1rpx solid #333;
  text-align: center;
  display: block;
  border-top: 1rpx solid #333;
  padding: 10rpx 0;
}

